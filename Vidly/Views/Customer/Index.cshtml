
@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>

@if (!Model.Any())
{
    <p>We don't have any customer.</p>
}
else
{
    <table>
        <tr>
            <th>Name</th>
        </tr>
        @foreach (var customer in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(customer.Name, "Detail", "Customer", new { id = customer.Id }, null)
                </td>
            </tr>
        }
    </table>
    
}

